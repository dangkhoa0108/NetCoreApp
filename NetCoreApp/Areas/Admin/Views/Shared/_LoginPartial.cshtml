@using Microsoft.AspNetCore.Identity
@using NetCoreApp.Extensions
@using NetCoreApp.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <img src="~/vendor/gentelella/production/img.jpg" alt="">@User.GetSpecificClaim("FullName")
    <span class=" fa fa-angle-down"></span>
</a>

<ul class="dropdown-menu dropdown-usermenu pull-right">
    <li><a href="javascript:;"> Profile</a></li>
    <li>
        <a href="javascript:;">
            <span class="badge bg-red pull-right">50%</span>
            <span>Settings</span>
        </a>
    </li>
    <li><a href="javascript:;">Help</a></li>
    <li>
        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <button><i class="fa fa-sign-out pull-right"></i> Log Out</button>
        </form>
    </li>
</ul>

