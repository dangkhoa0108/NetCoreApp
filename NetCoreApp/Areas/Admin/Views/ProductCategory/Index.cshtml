@{
    ViewData["Title"] = "Index";
}
@section Style{
    <link href="~/vendor/centit.easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/vendor/centit.easyui/themes/icon.css" rel="stylesheet" />
    <link href="~/vendor/centit.easyui/themes/mobile.css" rel="stylesheet" />
}
@section Script{
    <script src="~/vendor/centit.easyui/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/productcategory/index.js" asp-append-version="true"></script>
    <script>
        var productCategory = new productCategoryController();
        productCategory.initialize();
    </script>
}
<div class="page-title">
    <div class="title_left">
        <h3>Product Categories</h3>
    </div>

    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <button class="btn btn-success" id="btnCreate" type="button">Create</button>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <ul id="treeProductCategory">
                    <div id="contextMenu" class="easyui-menu" style="width: 120px">
                        <div id="btnEdit" data-options="iconCls:'icon-edit'">Edit</div>
                        <div id="btnDelete" data-options="iconCls:'icon-remove'">Delete</div>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_AddEditModal")
